{% include 'partial/navbar.twig' %}
<head>
    <title>news</title>
    <style>
        body {
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }

        .container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .article-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .article-item {
            box-sizing: border-box;
            background-color: rgba(245, 245, 245, 0.9);
            width: 20%;
            padding: 10px;
            border: 1px solid #ccc;
            margin: 10px;
            text-align: center;
            border-radius: 5px;
        }

        .article-item a {
            text-decoration: none;
            color: #333;
        }

        .article-item a:hover {
            color: #555;
        }
        .article-item img {
            max-width: 100%;
            border-radius: 5px;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>
<header>
    <h2>News</h2>
</header>

<div class="container">
    <ul class="article-container">
        {% for article in articles %}
            <li class="article-item">
                <img src="{{ article.getUrlToImage() }}" alt="">
                <h1><a href="{{ article.getUrl() }}" target="_blank">{{ article.getTitle() }}</a></h1>
                <p>{{ article.getDescription() }}</p>
                <p>{{ article.getAuthor()}} {{ article.getPublishedAt().format('H:i') }}</p>

            </li>
        {% endfor %}
    </ul>
</div>

<footer>
    <p>&copy; hello </p>
</footer>
</body>

